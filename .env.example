# Example Environment Variables - Copy to .env.local and configure

# Application Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=Library Management System
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_API_TIMEOUT=10000

# Authentication
NEXT_PUBLIC_JWT_REFRESH_INTERVAL=300000
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Features
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_RESERVATIONS=true
NEXT_PUBLIC_ENABLE_FINES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT=system
NEXT_PUBLIC_ITEMS_PER_PAGE=20
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=300

# Development Tools
NEXT_PUBLIC_SHOW_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_MOCK_API=false